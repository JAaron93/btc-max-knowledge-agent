# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Assistant Configuration
PINECONE_ASSISTANT_HOST=your_pinecone_assistant_host_here

# Eleven Labs API Key
ELEVEN_LABS_API_KEY=your_elevenlabs_api_key_here

# Web Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
UI_HOST=0.0.0.0
UI_PORT=7860

# Audio Cache Configuration
CACHE_BACKEND=multi-tier
CACHE_MEMORY_MAX_SIZE=100          # Max number of items in memory cache
CACHE_MEMORY_MAX_MB=50             # Max memory usage in MB (takes precedence over MAX_SIZE if both set)
CACHE_PERSISTENT_PATH=./cache
CACHE_PERSISTENT_MAX_SIZE=1000     # Max number of items in persistent cache
CACHE_PERSISTENT_MAX_MB=500        # Max persistent storage in MB (takes precedence over MAX_SIZE if both set)
CACHE_TTL_HOURS=24
CACHE_CLEANUP_INTERVAL_MINUTES=60
CACHE_ENABLE_WARMING=TRUE          # Enable cache warming on startup
CACHE_ENABLE_STATISTICS=TRUE       # Enable cache statistics collection

# Redis Configuration (optional, for distributed caching)
# CACHE_REDIS_HOST=localhost
# CACHE_REDIS_PORT=6379
# CACHE_REDIS_DB=0
# CACHE_REDIS_PASSWORD=your_redis_password_here  # Leave empty if Redis has no password
# CACHE_REDIS_MAX_CONNECTIONS=10
